<body>
    <h1>üìö –°–ª–∞–≤–∏–∫ - –°–ª–∞–≤—è–Ω—Å–∫–∏–π –°–ª–µ–Ω–≥–æ–≤—ã–π –°–ª–æ–≤–∞—Ä—å</h1>
    
    <div id="words-container">
        –ó–∞–≥—Ä—É–∑–∫–∞ —Å–ª–æ–≤...
    </div>

    <script>
        // === –í–ê–ñ–ù–û: –û–ë–ï–†–ù–ò–¢–ï –í–°–ï –í –ê–ù–û–ù–ò–ú–ù–£–Æ –§–£–ù–ö–¶–ò–Æ ===
        (function() {
            // === –ö–û–ù–§–ò–ì–£–†–ê–¶–ò–Ø SUPABASE ===
            // –ó–ê–ú–ï–ù–ò–¢–ï –≠–¢–ò –ó–ù–ê–ß–ï–ù–ò–Ø –ù–ê –°–í–û–ò!
            const supabaseUrl = 'https://jnzvjblpgvpkjammbwfi.supabase.co';
            const supabaseKey = 'sb_publishable_vBBeAZcQPXtaj7z5FCCVYg_6XDdChlu';
            
            // –°–æ–∑–¥–∞–µ–º –∫–ª–∏–µ–Ω—Ç Supabase
            window.supabaseClient = window.supabase.createClient(supabaseUrl, supabaseKey);
            
            // === –§–£–ù–ö–¶–ò–ò –î–õ–Ø –†–ê–ë–û–¢–´ –° –ë–ê–ó–û–ô ===
            
            // 1. –ü–æ–ª—É—á–∏—Ç—å –≤—Å–µ —Å–ª–æ–≤–∞
            window.loadWords = async function() {
                const container = document.getElementById('words-container');
                container.innerHTML = '<p>–ó–∞–≥—Ä—É–∑–∫–∞...</p>';
                
                try {
                    const { data: words, error } = await window.supabaseClient
                        .from('words')
                        .select('*')
                        .order('name');
                    
                    if (error) throw error;
                    
                    let html = '<h2>–°–ø–∏—Å–æ–∫ —Å–ª–æ–≤ (' + words.length + ')</h2>';
                    
                    words.forEach(word => {
                        html += `
                            <div class="word">
                                <h3>${word.name} (ID: ${word.id})</h3>
                                <button onclick="loadDefinitions(${word.id})">
                                    –ü–æ–∫–∞–∑–∞—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è
                                </button>
                                <div id="defs-${word.id}"></div>
                            </div>
                        `;
                    });
                    
                    container.innerHTML = html;
                    
                } catch (error) {
                    container.innerHTML = `<p class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–ª–æ–≤: ${error.message}</p>`;
                    console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–ª–æ–≤:', error);
                }
            }
            
            // 2. –ü–æ–ª—É—á–∏—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –¥–ª—è —Å–ª–æ–≤–∞
            window.loadDefinitions = async function(wordId) {
                const container = document.getElementById(`defs-${wordId}`);
                container.innerHTML = '<p>–ó–∞–≥—Ä—É–∑–∫–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–π...</p>';
                
                try {
                    const { data: definitions, error } = await window.supabaseClient
                        .from('definitions')
                        .select('*')
                        .eq('word_id', wordId)
                        .order('upvotes', { ascending: false });
                    
                    if (error) throw error;
                    
                    if (definitions.length === 0) {
                        container.innerHTML = '<p>–û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–π –ø–æ–∫–∞ –Ω–µ—Ç</p>';
                        return;
                    }
                    
                    let html = '<div class="definitions">';
                    
                    definitions.forEach(def => {
                        html += `
                            <div class="definition">
                                <p><strong>–û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ:</strong> ${def.definition_text}</p>
                                ${def.example_usage ? `<p><em>–ü—Ä–∏–º–µ—Ä:</em> ${def.example_usage}</p>` : ''}
                                <p>
                                    <small>
                                        üëç ${def.upvotes} | üëé ${def.downvotes} 
                                        | –ê–≤—Ç–æ—Ä: ${def.author_name || '–ê–Ω–æ–Ω–∏–º'}
                                    </small>
                                </p>
                                <button onclick="upvoteDefinition(${def.id})">+1</button>
                                <button onclick="downvoteDefinition(${def.id})">-1</button>
                            </div>
                        `;
                    });
                    
                    html += '</div>';
                    container.innerHTML = html;
                    
                } catch (error) {
                    container.innerHTML = `<p class="error">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–π: ${error.message}</p>`;
                    console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–π:', error);
                }
            }
            
            // 3. –ü–æ—Å—Ç–∞–≤–∏—Ç—å –ª–∞–π–∫ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—é
            window.upvoteDefinition = async function(definitionId) {
                try {
                    const { data: def, error: fetchError } = await window.supabaseClient
                        .from('definitions')
                        .select('upvotes, word_id')
                        .eq('id', definitionId)
                        .single();
                    
                    if (fetchError) throw fetchError;
                    
                    const newUpvotes = def.upvotes + 1;
                    
                    const { error: updateError } = await window.supabaseClient
                        .from('definitions')
                        .update({ upvotes: newUpvotes })
                        .eq('id', definitionId);
                    
                    if (updateError) throw updateError;
                    
                    alert('–õ–∞–π–∫ –¥–æ–±–∞–≤–ª–µ–Ω!');
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                    if (def.word_id) {
                        loadDefinitions(def.word_id);
                    }
                    
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏—è:', error);
                    alert('–û—à–∏–±–∫–∞: ' + error.message);
                }
            }
            
            // 4. –ü–æ—Å—Ç–∞–≤–∏—Ç—å –¥–∏–∑–ª–∞–π–∫
            window.downvoteDefinition = async function(definitionId) {
                try {
                    const { data: def, error: fetchError } = await window.supabaseClient
                        .from('definitions')
                        .select('downvotes, word_id')
                        .eq('id', definitionId)
                        .single();
                    
                    if (fetchError) throw fetchError;
                    
                    const newDownvotes = def.downvotes + 1;
                    
                    const { error: updateError } = await window.supabaseClient
                        .from('definitions')
                        .update({ downvotes: newDownvotes })
                        .eq('id', definitionId);
                    
                    if (updateError) throw updateError;
                    
                    alert('–î–∏–∑–ª–∞–π–∫ –¥–æ–±–∞–≤–ª–µ–Ω!');
                    
                    if (def.word_id) {
                        loadDefinitions(def.word_id);
                    }
                    
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –≥–æ–ª–æ—Å–æ–≤–∞–Ω–∏—è:', error);
                    alert('–û—à–∏–±–∫–∞: ' + error.message);
                }
            }
            
            // 5. –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤–æ–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ
            window.addDefinition = async function() {
                const wordName = prompt('–í–≤–µ–¥–∏—Ç–µ —Å–ª–æ–≤–æ (–Ω–∞–ø—Ä–∏–º–µ—Ä: "–∫—Ä–∞—à"):');
                if (!wordName) return;
                
                const definitionText = prompt('–í–≤–µ–¥–∏—Ç–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ:');
                if (!definitionText) {
                    alert('–û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ!');
                    return;
                }
                
                const example = prompt('–í–≤–µ–¥–∏—Ç–µ –ø—Ä–∏–º–µ—Ä –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è (–Ω–µ–æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ):');
                const author = prompt('–í–∞—à–µ –∏–º—è (–∏–ª–∏ –æ—Å—Ç–∞–≤—å—Ç–µ –ø—É—Å—Ç–æ –¥–ª—è –∞–Ω–æ–Ω–∏–º–∞):') || '–ê–Ω–æ–Ω–∏–º';
                
                try {
                    // 1. –ü—Ä–æ–≤–µ—Ä—è–µ–º, –µ—Å—Ç—å –ª–∏ —Ç–∞–∫–æ–µ —Å–ª–æ–≤–æ
                    const { data: existingWords, error: searchError } = await window.supabaseClient
                        .from('words')
                        .select('id')
                        .eq('name', wordName.trim().toLowerCase());
                    
                    let wordId;
                    
                    if (searchError) throw searchError;
                    
                    if (existingWords && existingWords.length > 0) {
                        // –°–ª–æ–≤–æ —É–∂–µ –µ—Å—Ç—å
                        wordId = existingWords[0].id;
                    } else {
                        // –°–æ–∑–¥–∞–µ–º –Ω–æ–≤–æ–µ —Å–ª–æ–≤–æ
                        const { data: newWord, error: insertError } = await window.supabaseClient
                            .from('words')
                            .insert([{ name: wordName.trim().toLowerCase() }])
                            .select('id')
                            .single();
                        
                        if (insertError) throw insertError;
                        wordId = newWord.id;
                    }
                    
                    // 2. –î–æ–±–∞–≤–ª—è–µ–º –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ
                    const { error: defError } = await window.supabaseClient
                        .from('definitions')
                        .insert([
                            {
                                word_id: wordId,
                                definition_text: definitionText,
                                example_usage: example || null,
                                author_name: author,
                                upvotes: 0,
                                downvotes: 0
                            }
                        ]);
                    
                    if (defError) throw defError;
                    
                    alert('‚úÖ –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω–æ!');
                    
                    // 3. –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ —Å–ª–æ–≤
                    loadWords();
                    
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è:', error);
                    alert('‚ùå –û—à–∏–±–∫–∞: ' + error.message);
                }
            }
            
            // 6. –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤–æ–µ —Å–ª–æ–≤–æ –±–µ–∑ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è
            window.addWord = async function() {
                const wordName = prompt('–í–≤–µ–¥–∏—Ç–µ –Ω–æ–≤–æ–µ —Å–ª–æ–≤–æ:');
                if (!wordName) return;
                
                try {
                    const { error } = await window.supabaseClient
                        .from('words')
                        .insert([{ name: wordName.trim().toLowerCase() }]);
                    
                    if (error) throw error;
                    
                    alert('‚úÖ –°–ª–æ–≤–æ "' + wordName + '" –¥–æ–±–∞–≤–ª–µ–Ω–æ!');
                    loadWords();
                    
                } catch (error) {
                    console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–ª–æ–≤–∞:', error);
                    alert('‚ùå –û—à–∏–±–∫–∞: ' + error.message);
                }
            }
            
            // === –ó–ê–ì–†–£–ó–ö–ê –î–ê–ù–ù–´–• –ü–†–ò –ó–ê–ü–£–°–ö–ï ===
            document.addEventListener('DOMContentLoaded', function() {
                // –¢–µ—Å—Ç–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
                console.log('–ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –∑–∞–≥—Ä—É–∂–∞–µ—Ç—Å—è...');
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ
                testConnection();
                
                // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–ª–æ–≤–∞
                loadWords();
            });
            
            // –§—É–Ω–∫—Ü–∏—è –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è
            async function testConnection() {
                try {
                    const { data, error } = await window.supabaseClient
                        .from('words')
                        .select('count', { count: 'exact', head: true });
                    
                    if (error) {
                        console.error('‚ùå –û—à–∏–±–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ Supabase:', error);
                        document.getElementById('words-container').innerHTML = 
                            `<p class="error">–û—à–∏–±–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö: ${error.message}</p>`;
                    } else {
                        console.log('‚úÖ –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ Supabase —É—Å–ø–µ—à–Ω–æ');
                    }
                } catch (err) {
                    console.error('‚ùå –ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞:', err);
                }
            }
            
        })(); // –ö–æ–Ω–µ—Ü –∞–Ω–æ–Ω–∏–º–Ω–æ–π —Ñ—É–Ω–∫—Ü–∏–∏
    </script>
    
    <div style="margin-top: 30px; padding: 20px; background: #e8f5e9; border-radius: 8px;">
        <h3>üìã –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å–ª–æ–≤–∞—Ä–µ–º</h3>
        
        <div style="display: flex; gap: 10px; flex-wrap: wrap; margin-bottom: 20px;">
            <button onclick="addDefinition()">‚ûï –î–æ–±–∞–≤–∏—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ</button>
            <button onclick="addWord()">‚ú® –î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤–æ–µ —Å–ª–æ–≤–æ</button>
            <button onclick="loadWords()">üîÑ –û–±–Ω–æ–≤–∏—Ç—å —Å–ø–∏—Å–æ–∫</button>
        </div>
        
        <div style="background: #f0f8ff; padding: 15px; border-radius: 5px; border-left: 4px solid #2196F3;">
            <h4>üéØ –ö–∞–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è:</h4>
            <ol>
                <li>–ù–∞–∂–º–∏—Ç–µ "–î–æ–±–∞–≤–∏—Ç—å –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ"</li>
                <li>–í–≤–µ–¥–∏—Ç–µ —Å–ª–æ–≤–æ (–µ—Å–ª–∏ –µ–≥–æ –Ω–µ—Ç - –æ–Ω–æ —Å–æ–∑–¥–∞—Å—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏)</li>
                <li>–í–≤–µ–¥–∏—Ç–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ –∏ –ø—Ä–∏–º–µ—Ä</li>
                <li>–ù–∞–∂–º–∏—Ç–µ –Ω–∞ —Å–ª–æ–≤–æ, —á—Ç–æ–±—ã —É–≤–∏–¥–µ—Ç—å –≤—Å–µ –µ–≥–æ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è</li>
                <li>–ì–æ–ª–æ—Å—É–π—Ç–µ –∑–∞ –ª—É—á—à–∏–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è –∫–Ω–æ–ø–∫–∞–º–∏ üëç/üëé</li>
            </ol>
            
            <p><strong>üí° –ü–æ–¥—Å–∫–∞–∑–∫–∞:</strong> –û—Ç–∫—Ä–æ–π—Ç–µ –∫–æ–Ω—Å–æ–ª—å –±—Ä–∞—É–∑–µ—Ä–∞ (F12 ‚Üí Console) –¥–ª—è –æ—Ç–ª–∞–¥–∫–∏.</p>
        </div>
    </div>
    
    <!-- –ü—Ä–æ—Å—Ç–æ–π —Ñ—É—Ç–µ—Ä -->
    <footer style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #eee; color: #666; font-size: 0.9em;">
        <p>–°–ª–∞–≤—è–Ω—Å–∫–∏–π –°–ª–µ–Ω–≥ –°–ª–æ–≤–∞—Ä—å | –ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö: Supabase | –°–ª–æ–≤ –≤ –±–∞–∑–µ: <span id="word-count">...</span></p>
        <script>
            // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π –ø–æ–¥—Å—á–µ—Ç —Å–ª–æ–≤
            setTimeout(async () => {
                try {
                    const { count } = await window.supabaseClient
                        .from('words')
                        .select('*', { count: 'exact', head: true });
                    document.getElementById('word-count').textContent = count || 0;
                } catch (e) {
                    document.getElementById('word-count').textContent = '?';
                }
            }, 1000);
        </script>
    </footer>
